@using Invoice.Web.Startup
@using Invoice.Web.Models.VehicleModules
@model VehicleListViewModel
@{
    ViewBag.Title = L("Vehicle");
   // ViewBag.CurrentPageName = PageNames.Vehicle;
}

@section scripts
{
        <script src="~/view-resources/Views/Vehicles/Index.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Vehicles")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#VehicleCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>  
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Vehicles/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="VehicleTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Marka</th>
                                        <th>Shasia</th>
                                        <th>Modeli</th>
                                        <th>Viti Prodhimit</th>
                                        <th>Targat</th>
                                        <th>Kilomrtta</th>
                                        <th>Ngjyra</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Vehicles/_CreateModal.cshtml", Model)

