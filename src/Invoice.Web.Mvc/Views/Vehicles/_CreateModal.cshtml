@using Abp.Authorization.Users
@using Invoice.Web.Models.Common.Modals
@using Invoice.Vehicles
@using Invoice.Web.Models.VehicleModules

@{
    Layout = null;
}

<div class="modal fade" id="VehicleCreateModal" tabindex="-1" role="dialog" aria-labelledby="VehicleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewVehicle")))
            <form name="vehicleCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Vin")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="VIN" required maxlength="@AbpUserBase.MaxUserNameLength" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Mark")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Make" required maxlength="@AbpUserBase.MaxNameLength">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Modeli")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Model" required maxlength="@AbpUserBase.MaxSurnameLength">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Viti")</label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" name="Year" required ">
                                </div>
                            </div>
                            <div class="form-group row required">
                                 <label class="col-md-3 col-form-label">@L("Ngjyra")</label>
                                 <div class="col-md-9">
                                   <input type="text" class="form-control" name="Color" required ">
                                 </div>
                            </div>                       
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>


